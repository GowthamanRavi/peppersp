<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.peppersp"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="13" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.peppersp.ControlPanel"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.peppersp.PasswordSettings"
            android:label="@string/title_activity_password_settings"
            android:parentActivityName="com.example.peppersp.ControlPanel" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.peppersp.ControlPanel" />
        </activity>
        <activity
            android:name="com.example.peppersp.EmergencyNoSetting"
            android:label="@string/title_activity_emergency_no_setting" 
            android:parentActivityName="com.example.peppersp.ControlPanel" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.peppersp.ControlPanel" />
        </activity>
    </application>

</manifest>